<%- include("partials/header", {pageTitle:"FutuRadio", stateName: "home"}); %>
<%- include("partials/navbar-home-new", {pageTitle:"FutuRadio",pageSubTitle: "La radio del futuro"}); %>


<!-- Contenuti -->
<section id="christmas-section">

  <div class="myChristmas align-items-center">
    <h3 class="christmas-title-new">FutuRadio Christmas Specials</h3>
  </div>

  <div class="btn-container">
    <div class="menuSpec-container btn-toolbar">
      <div class="shows-menu btn-group">
        <button class="btn menuSpec-button" data-filter-spec=".podcast">Podcast</button>
        <button class="btn menuSpec-button" data-filter-spec=".playlist">Playlist</button>
      </div>
    </div>
  </div>

  <div class="gallerySpec-container">
    <div class="row">
        <div class="col-12 menuSpec-item podcast">
          <div class="spreaker-special-div">
            <a class="spreaker-player" href="https://www.spreaker.com/show/lalmanacco-di-futuradio" data-resource="show_id=4702083" data-width="100%" data-height="200px" data-theme="light" data-playlist="false" data-playlist-continuous="false" data-autoplay="false" data-live-autoplay="false" data-chapters-image="true" data-episode-image-position="right" data-hide-logo="false" data-hide-likes="false" data-hide-comments="false" data-hide-sharing="false" data-hide-download="true">Ascolta "L&#39;almanacco di FutuRadio" su Spreaker.</a>
          </div>
        </div>
      </div>

      <div class="row">
          <div class="col-12 menuSpec-item playlist">
            <div class="spreaker-special-div">
              <iframe src="https://open.spotify.com/embed/playlist/6l4cGSTKyrf2yt5woNjOLk" width="100%" height="200px" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>
        </div>
    </div>

  </div>
</section>

<section id="menu-section">

  <div class="myPrograms align-items-center">
    <h3 class="programs-title-new">I nostri contenuti</h3>
    <hr class="title-hr">
  </div>

  <div class="btn-container">
    <div class="menu-container btn-toolbar">
      <div class="shows-menu btn-group">
        <button class="btn menu-button" data-filter="*">Tutti</button>
        <button class="btn menu-button" data-filter=".show">Le voci</button>
        <button class="btn menu-button" data-filter=".mix">I suoni</button>
        <button class="btn menu-button" data-filter=".blog">Le parole</button>
      </div>
    </div>
  </div>

  <div class="gallery-container">
    <div class="row">
      <% if(shows && shows.length){%>
      <%  shows.forEach(function(show){ %>
        <div class="col-12 col-md-6 menu-item show">
        <div class="item-container">
          <div class="item-thumbnail align-items-center">
            <a href="shows/<%=show.stateName%>"><img class="img-item-new" src="/images/pages/home/<%=show.stateName%>-home.jpg" alt=""></a>
          </div>
          <!-- <div class="item-content text-center">
            <h3>con Sarzo</h3>
          </div> -->

        </div>
        <!-- <hr class="hr-homepage-cards"> -->
      </div>

      <% }) %>
      <% } %>

      <% if(mixes && mixes.length){%>
      <%  mixes.forEach(function(mix){ %>
      <div class="col-12 col-md-6 menu-item mix">
        <div class="item-container">
          <div class="item-thumbnail align-items-center">
            <a href="mixes/<%=mix.stateName%>"><img class="img-item-new" src="/images/pages/home/<%=mix.stateName%>-home.jpg" alt=""></a>
          </div>
          <!-- <div class="item-content text-center">
            <h3>con Sarzo</h3>
          </div> -->

        </div>
        <!-- <hr class="hr-homepage-cards"> -->
      </div>
      <% }) %>
      <% } %>

      <% if(blogs && blogs.length){%>
      <%  blogs.forEach(function(blog){ %>
      <div class="col-12 col-md-6 menu-item blog">
        <div class="item-container">
          <div class="item-thumbnail align-items-center">
            <a href="blogs/<%=blog.stateName%>"><img class="img-item-new" src="/images/pages/home/<%=blog.stateName%>-home.jpg" alt=""></a>
          </div>
          <!-- <div class="item-content text-center">
            <h3>con Sarzo</h3>
          </div> -->

        </div>
        <!-- <hr class="hr-homepage-cards"> -->
      </div>
      <% }) %>
      <% } %>
    </div>

  </div>
</section>

<hr class="title-hr">
