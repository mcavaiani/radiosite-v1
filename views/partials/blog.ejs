<!-- Section music -->

<div class="">
  <% if(latests && latests.length){ %>
    <% var ind = 0%>
    <%  latests.forEach(function(latest){ %>

    <div class="row justify-content-center post-row">
      <div class="post-img-container col-lg-4">
        <% if(latest.previewPicture){%>
        <%  var picture = latest.previewPicture.toString();%>
      <%  }else{%>
      <%    var picture = "../images/people/"+latest.author+".jpg";%>
      <%  }%>
        <img class="post-img" src="<%=picture%>" alt="There should be my face">
      </div>
      <div class="post-text-container col-lg-6">
        <div class="post-text">
          <% var number =posts.length + latests.length - ind -1%>
          <p class="post-number">Ep. <%=number%></p>
          <% var dateShort =latest.postDate %>
          <p class="post-date"><%=moment(dateShort).format('DD-MM-YY')%></p>
          <h2 class="post-header"><%=latest.title%></h2>
          <p class="post-preview"><%=latest.preview%>...<a href="/<%=programType %>/<%=stateName%>/posts/<%=latest.id%>">read more</a></p>
          <p class="post-author"><%=latest.author%></p>
        </div>
      </div>
    </div>
    <% ind++%>
  <% }) %>

  <hr class="h-line-programs">

  <%}else{ %>
    <p class="post-error">Non ci sono post</p>
  <%} %>
  </div>

