  <div class="">

    <% if(posts && posts.length){%>

    <% ind = 0%>
    <%  posts.forEach(function(post){ %>

      <div class="row card-post-row">
        <div class="card-post col-lg-10">
          <div class="card-body card-post">
            <h5 class="card-title"><%= post.title%></h5>
            <p class="card-text post-preview"><%= post.preview%>...<a href="/<%=programType %>/<%=stateName%>/posts/<%=post.id%>">read more</a></p>
            <% var pos = posts.length - ind -1%>
            <h6 class="card-subtitle mb-2 text-muted">Episode <%=pos %> - <%=moment(post.postDate).format('DD-MM-YY') %></h6>
          </div>
        </div>
      </div>

      <% ind++%>
      <% }) %>
      <% } %>
  </div>

